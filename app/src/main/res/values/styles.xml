<?xml version="1.0" encoding="utf-8"?>
<resources>
<!--    plan now-->
    <style name="MyTextStyle1" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/gravity_regular</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
<!--    slide_to_add_item -->
    <style name="MyTextStyle2">
        <item name="android:fontFamily">@font/gravity_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/dialog_background_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!--    item_list -->
    <style name="MyTextStyle3" >
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">20dp</item>
        <item name="android:paddingTop">25dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <!--    slide_to_add_item -->
    <style name="MyTextStyle4">
        <item name="android:fontFamily">@font/gravity_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/dialog_background_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>
    <!--    item -->
    <style name="MyTextStyle5" >
        <item name="android:fontFamily">@font/gravity_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--    item date -->
    <style name="MyTextStyle6">
        <item name="android:fontFamily">@font/gravity_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/dialog_background_color</item>
    </style>

    <!--白天的主页面导航栏和底部导航栏颜色-->
    <style name="Day_MainTheme">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <!-- 其他样式设置 -->
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
    <!--半屏显示对话框并且底色为白色-->
    <style name="HalfScreenDialogStyle">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>


    <!--  输入购买产品的对话框，输入框的弧度,已经边框等 -->
    <style name="AddItemInputTextRadius" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/black</item> <!-- 用于输入框字体的颜色 -->
        <item name="boxBackgroundMode">none</item> <!-- 移除边框 -->
        <item name="android:textColorHint">@color/hint_font</item> <!-- 用于自动显示默认字的颜色 -->
        <item name="hintEnabled">false</item> <!-- 禁用浮动标签 -->
    </style>

    <!--  日期选择器的button  -->
    <style name="dateSelectButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/gravity_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/select_date_button_color</item>
        <item name="android:layout_marginStart">6dp</item>
    </style>

</resources>